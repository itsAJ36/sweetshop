generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String
  role      String   @default("user")
  createdAt DateTime @default(now())
}

model Sweet {
  id        String   @id @default(uuid())
  name      String
  category  String
  price     Float
  quantity  Int
  createdAt DateTime @default(now())
}
